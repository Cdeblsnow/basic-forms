<h2>Edit user</h2>

<%= form_with model: @user do |form|%>
    <div>
        <%= form.label :username, "Username"%>
        <%= form.text_field :username, value: @user.username%>
    </div>
    <div>
        <%= form.label :email, "Email"%>
        <%= form.email_field :email , value: @user.email %>
    </div>
    <div>
        <%= form.label :password, "Password"%>
